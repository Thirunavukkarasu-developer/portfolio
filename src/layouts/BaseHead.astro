---
export interface Props {
  title?: string;
  description?: string;
  publishedDate?: string;
  authors?: string[];
  tags?: string;
}

const { title, description, publishedDate, authors, tags } = Astro.props;

const siteDescription = description;
const pageTitle = title;
---

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />

  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="generator" content={Astro.generator} />

  <meta name="title" content={pageTitle} />
  <meta name="description" content={siteDescription} />
  <title>{title}</title>

  <!-- Twitter/X -->
  <meta property="twitter:site" content="@Thiruna71130029" />
  <meta property="twitter:card" content="summary_large_image" />
   <meta property="twitter:url" content={Astro.url} />
   <meta property="twitter:title" content={pageTitle} />
   <meta property="twitter:description" content={siteDescription} />
    <meta
      property="twitter:image"
      content="https://x.com/Thiruna71130029/photo"
    />

    <!-- LinkedIn / Open Graph -->
    <meta property="og:type" content="profile" />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={siteDescription} />
    <meta property="og:image" content="https://www.linkedin.com/in/thiruna-developer" />
    <meta
      property="og:url"
      content={Astro.url}
    />
   <meta
     property="og:site_name"
     content="E. Thirunavukkarasu | Senior Software Developer"
   />

   <meta property="og:image:width" content="1200" />
   <meta property="og:image:height" content="630" />

   <meta property="profile:first_name" content="Thirunavukkarasu" />
   <meta property="profile:last_name" content="E." />
   <meta property="profile:username" content="thirunavukkarasu" />

   {publishedDate && (
     <>
       <meta property="article:author" content={authors ? authors.join(", ") : "E. Thirunavukkarasu"} />
       <meta property="article:published_time" content={publishedDate} />
       {tags && tags.split(',').map(tag => <meta property="article:tag" content={tag.trim()} />)}
     </>
   )}

   <link rel="canonical" href={Astro.url} />

   <script type="application/ld+json">
   {
     "@context": "https://schema.org",
     "@type": "Person",
     "name": "E. Thirunavukkarasu",
     "jobTitle": "Senior Full Stack Developer",
     "url": "https://thiruna.com",
     "sameAs": ["https://linkedin.com/in/thiruna-developer", "https://x.com/Thiruna71130029"]
   }
   </script>

   {publishedDate && (
     <script type="application/ld+json">
     {{
       "@context": "https://schema.org",
       "@type": "Article",
       "headline": title,
       "description": description,
       "author": authors ? authors.map(author => ({ "@type": "Person", "name": author })) : [{ "@type": "Person", "name": "E. Thirunavukkarasu" }],
       "datePublished": publishedDate,
       "url": Astro.url,
       "publisher": {
         "@type": "Person",
         "name": "E. Thirunavukkarasu"
       },
       "keywords": tags || ""
     }}
     </script>
   )}
</head>
