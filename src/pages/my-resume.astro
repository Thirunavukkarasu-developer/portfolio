---
import Layout from "../layouts/Layout.astro";

const title = "My Resume | Thiruna";
---

<Layout title={title}>
    <div
        id="my-resume"
        class="max-w-5xl mx-auto px-5 sm:px-6 lg:px-8 mt-10 overflow-x-hidden"
    >
        <div class="mb-6 flex items-center justify-between">
            <h3 class="text-3xl">My Resume</h3>
            <a
                href="/Thirunavukkarasu_E.pdf"
                download="Thirunavukkarasu_E_Resume.pdf"
                class="bg-blue-800 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition-colors"
            >
                Download Resume
            </a>
        </div>

        <div class="bg-white shadow-lg rounded-lg overflow-hidden">
            <iframe
                src="/Thirunavukkarasu_E.pdf#navpanes=0"
                width="100%"
                height="800"
                class="border-0"
                title="Resume Preview"></iframe>
        </div>
    </div>
</Layout>
