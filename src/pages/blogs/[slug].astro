---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

const { post } = Astro.props;
const { Content } = await post.render();

export const prerender = true;

export async function getStaticPaths() {
  const posts = await getCollection("blogs", ({ data }) => {
    return data.draft !== true;
  });

  return posts.map((post) => {
    return {
      params: { slug: post.slug },
      props: { post },
    };
  });
}
---

<Layout title={post.data.title} description={post.data.description} publishedDate={post.data.publishedDate.toISOString()} authors={post.data.authors} tags={post.data.popularTags}>
    <article class="prose prose-lg max-w-5xl mx-auto px-5 sm:px-6 lg:px-8 mt-10">
        <Content />
    </article>
</Layout>
